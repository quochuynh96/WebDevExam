@model WebDevExam.Enrollment
    @using WebDevExam.Helper

@{
    ViewBag.Title = "Xóa đăng ký";
    HelperClass helper = new HelperClass();
    var student = helper.getStudentByID((int)Model.StudentID);
    Course course = helper.getCourseByID((int)Model.CourselD);
}

<h2>Xác nhận xóa</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Thông tin :</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Grade)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Grade)
        </dd>

        <dt>
            Course
        </dt>

        <dd>
           @course.Title
        </dd>

        <dt>
            Student
        </dt>

        <dd>
           @student.LastName @student.FirstName
        </dd>

    </dl>

    <a class="btn btn-danger" href="@Url.Action("ConfirmDelete","Enrollment",new { id = Model.EnrollmentID, courseID = Model.CourselD })">Xác nhận</a>
</div>
